{% extends 'main.html.twig' %}

{% block title %}{{ parent() }} | Details profil {{ user.pseudo }}{% endblock %}

{% block body %}
    <h2>Profil Utilisateur</h2>
    <div class="profil">Pseudo: {{ user.pseudo }}</div>
    <div class="profil">Nom: {{ user.nom }}</div>
    <div class="profil">Prenom: {{ user.prenom }}</div>
    <div class="profil">Téléphone: {{ user.telephone }}</div>
    <div class="profil">Email: {{ user.email }}</div>



    <h3>Modifier le profil</h3>
    <form method="post" action="{{ path('update_profile') }}">
        <div>
            <label for="pseudo">Pseudo:</label>
            <input type="text" id="pseudo" name="pseudo" value="{{ user.pseudo }}">
        </div>
        <div>
            <label for="nom">Nom:</label>
            <input type="text" id="nom" name="nom" value="{{ user.nom }}">
        </div>
        <div>
            <label for="prenom">Prénom:</label>
            <input type="text" id="prenom" name="prenom" value="{{ user.prenom }}">
        </div>
        <div>
            <label for="telephone">Téléphone:</label>
            <input type="text" id="telephone" name="telephone" value="{{ user.telephone }}">
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{ user.email }}">
        </div>
        <div>
            <input type="submit" value="Enregistrer les modifications">
        </div>
    </form>



{% endblock %}