{% extends 'main.html.twig' %}

{% block title %}{{ parent() }} | Détails {{ organisateur.pseudo }}{% endblock %}

{% block body %}
    <h2>Détails du profil</h2>

    <img src="{{ asset('directory_to_upload/'~organisateur.image) }}" alt="Profile Picture" class="centered-image">
    <div class="profil">Nom: {{ organisateur.nom }}</div>
    <div class="profil">Prénom: {{ organisateur.prenom }}</div>
    <div class="profil">Email: {{ organisateur.email }}</div>
{% endblock %}
