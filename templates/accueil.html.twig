{% extends 'main.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    <div class="searchForm">
        {{ form_start(form) }}
    {{ form_label(form.search) }}
        <div class="barreEtBouton">
            {{ form_widget(form.search, { 'attr': {'class':'barre', 'placeholder': 'Rechercher...'} }) }}
            <button type="submit">Rechercher</button>
        </div>
    {{ form_end(form) }}
    </div>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>inscrits/places</th>
            <th>Durée</th>
            <th>État</th>

            <th>Organisateur</th>
            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            {% if search is empty or search in sortie.nom %}
                {% if sortie.etat.id == '1' or '2' or '3' %}

            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription |date('d/m/Y H:i')}}</td>
                <td>{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.duree | date('%i') }}</td>
                <td>{{ sortie.etat.id }}</td>
                <td>{{ sortie.organisateur.nom }}</td>

                <td>
                    <a href="{{ path('sortie_details', {'id': sortie.id}) }}" title="details" class="lien">Détails</a>

                </td>
            </tr>

                {% endif %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <button>
        <a href="{{ path('sortie_create') }}">Créer une sortie</a>
    </button>
{% endblock %}